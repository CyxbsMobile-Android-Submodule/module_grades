<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_grades_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fl_grades_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="13dp"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_grades_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/common_default_avatar"
            app:layout_constraintBottom_toBottomOf="@id/view_grades_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_grades_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:textColor="@color/grades_fragment_text_color_black"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/iv_grades_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_grades_avatar"
            tools:text="王尼玛" />

        <TextView
            android:id="@+id/tv_grades_college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:textColor="@color/grades_fragment_text_color_black3"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_grades_avatar"
            app:layout_constraintLeft_toRightOf="@id/iv_grades_avatar"
            tools:text="传媒艺术学院" />


        <TextView
            android:id="@+id/tv_grades_stuNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:textColor="@color/grades_fragment_text_color_black3"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/tv_grades_college"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_grades_name"
            tools:text="2017211111" />

        <View
            android:id="@+id/view_grades_line"
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"
            android:layout_marginTop="10dp"
            android:background="@color/grades_fragment_text_color_black3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_grades_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/grades_bottom_sheet_title"
        android:textColor="@color/levelTwoFontColor"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_grades_header" />

    <TextView
        android:id="@+id/tv_gpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/grades_bottom_sheet_gpa"
        android:textColor="@color/levelTwoFontColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_grades_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_grades_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_grades_title"
        app:layout_constraintVertical_bias="0.0" />

    <com.mredrock.cyxbs.discover.grades.utils.widget.GPAgraph
        android:id="@+id/gpa_graph"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_gpa" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_grades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gpa_graph" />
</androidx.constraintlayout.widget.ConstraintLayout>
